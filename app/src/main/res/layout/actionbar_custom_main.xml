<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/actionBarCustomLayout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <Button
        android:id="@+id/actionBarIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/menu_drawer" />

    <TextView
        android:id="@+id/actionBarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/actionBarIcon"
        android:layout_marginTop="4dp"
        android:textColor="#fff"
        android:textSize="23sp" />

    <Button
        android:id="@+id/actionBarManageCamera"
        android:background="@drawable/stop_camera"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="4dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <Button
        android:id="@+id/actionBarFlashCamera"
        android:background="@drawable/flash_close"
        android:layout_toLeftOf="@id/actionBarManageCamera"
        android:layout_marginTop="3dp"
        android:layout_marginRight="7dp"
        android:layout_width="30dp"
        android:layout_height="30dp" />

</RelativeLayout>